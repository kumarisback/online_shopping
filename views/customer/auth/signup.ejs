<%- include('../../shared/includes/head',{pageTitle:"signup"}) %> 
<link rel="stylesheet" href="/style/auth.css">
</head>
<body>
<%- include('../../shared/includes/header') %> 
<main>
    <h1>
        Create New Account
    </h1>

    <form action="/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>">
        <p>
            <label for='email'>E-Mail</label>
            <input type="email" name="email" id="email" required>
        </p>
        <p>
            <label for='confirm-email'>Confirm E-Mail</label>
            <input type="email" name="confirm-email" id="confirm-email" required>
        </p>
        <p>
            <label for='password'>Password</label>
            <input type="password" name="password" id="password" minlength="6"  autocomplete="on" required>
        </p>  
        <hr> 
        <p>
            <label for='fullname'>Full Name</label>
            <input type="text" name="fullname" id="fullname" required>
        </p>
        <p>
            <label for='street'>Street</label>
            <input type="text" name="street" id="street" required>
        </p>
        <p>
            <label for='postal'>Postal Code</label>
            <input type="text" name="postal" id="postal" minlength="6"  max="6" required>
        </p>  
        <p>
            <label for='city'>City</label>
            <input type="text" name="city" id="city"  required>
        </p> 
        <button class="btn btn-warning">
            Create Account
        </button>
        <p id="swith-form"><a href="/login">Login instead</a></p>
    </form>
</main>
<%- include('../../shared/includes/footer') %> 